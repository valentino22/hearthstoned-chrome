{
	"name": "Hearthstone Cards",
	"manifest_version": 2,
	"description": "This extension lists all cards in the Hearthstone game. It's useful for looking up cards while watching a stream or reading a guide.",
	"version": "1.4",
	"author": "Szabolcs Ferenczi",
	"short_name": "Hearthstone Cards",
	"browser_action": {
		"default_icon": "images/HS-19.png",
		"default_popup": "cards.html",
		"default_title": "HearthStone Cards"
	},
	"icons": {
		"16": "images/HS-19.png",
		"48": "images/HS-48.png",
		"64": "images/HS-64.png",
		"128":"images/HS-128.png"
	},
	"permissions": [
		"storage"
	],
   "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.hearthhead.com; object-src 'self'"
}